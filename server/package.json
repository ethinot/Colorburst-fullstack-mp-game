{
  "name": "crawlavers-backend",
  "version": "0.0.1",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "start": "concurrently \"nodemon src/index.ts\" \"cd ../client && npm run dev\"",
    "poststart": "cd ../client && npm run dev",
    "format": "npx prettier --write .",
    "lint": "npx eslint ./src",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "cd .. && husky install ./server/.husky && chmod +x ./server/.husky/pre-commit"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.15",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "concurrently": "^7.6.0",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.1.0",
    "nodemon": "^2.0.20",
    "prettier": "2.8.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "npx eslint ./src",
      "npx prettier --write .",
      "git add"
    ],
    "*.{html,css,md,json}": [
      "npx prettier --write .",
      "git add"
    ]
  }
}
